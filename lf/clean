#!/bin/bash

# Cleaner script for lf to clear previews
# Save as ~/.config/lf/clean

# Clear any kitty images if in kitty
if [ -n "$KITTY_WINDOW_ID" ]; then
  kitty +kitten icat --clear --stdin=no --silent --transfer-mode=file </dev/null >/dev/tty 2>/dev/null
fi

# Clear sixel graphics
printf '\033[2J' >/dev/tty

exit 0
